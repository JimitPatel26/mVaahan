                        <Insets left="10.0" right="10.0" />
                    </padding>
                </Label>
                <Button fx:id="okButton" alignment="CENTER" mnemonicParsing="false" onAction="#okAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-radius: 8; -fx-background-color: #1abc9c; -fx-text-fill: white;" text="OK" GridPane.halignment="CENTER" GridPane.rowIndex="2">
