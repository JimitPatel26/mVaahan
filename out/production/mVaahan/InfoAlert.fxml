<AnchorPane prefHeight="250.0" prefWidth="450.0" style="-fx-background-radius: 12;" stylesheets="@dashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.InfoAlertController">
    <children>
        <GridPane layoutX="25.0" layoutY="25.0" prefHeight="200.0" prefWidth="400.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
