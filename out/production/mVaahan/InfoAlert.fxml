            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label fx:id="title" alignment="CENTER" prefHeight="40.0" prefWidth="400.0" styleClass="dashboard-title" text="Alert Title" textAlignment="CENTER">
                    <font>
                        <Font size="26.0" />
                    </font>
