<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="sidebarPane" prefHeight="826.0" prefWidth="1586.0" stylesheets="@dashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.SidebarController">
    <children>

        <!-- Sidebar -->
        <VBox fx:id="sidebar" layoutY="79.0" prefHeight="785.0" prefWidth="220.0" styleClass="sidebar">
            <children>
                <Button fx:id="viewDashboardButton" alignment="CENTER" contentDisplay="CENTER" onAction="#handleViewDashboard" prefHeight="80.0" prefWidth="231.0" styleClass="sidebar-button" stylesheets="@dashboard.css" text="View Dashboard" />
                <Button fx:id="viewLicenseButton" onAction="#handleViewLicense" prefHeight="80.0" styleClass="sidebar-button" text="View License" />
                <Button fx:id="viewVehiclesButton" onAction="#handleViewVehicles" prefHeight="80.0" styleClass="sidebar-button" stylesheets="@dashboard.css" text="View Vehicle Details" />
                <Button fx:id="viewChallansButton" onAction="#handleViewChallans" prefHeight="80.0" styleClass="sidebar-button" text="View Challans" />
                <Button fx:id="processPaymentButton" onAction="#handleMakePayment" prefHeight="80.0" styleClass="sidebar-button" text="Make Payment" />
                <Button fx:id="viewProfileSettingsButton" onAction="#handleProfileSettings" prefHeight="80.0" styleClass="sidebar-button" text="Profile Settings" />
                <Button fx:id="logoutButton" onAction="#handleLogout" prefHeight="80.0" styleClass="sidebar-button" text="Logout" />
            </children>
        </VBox>
    </children>
</AnchorPane>
